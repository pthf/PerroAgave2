.container-video
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

.videoIntro
  width: 100%;
  height: 56.5vw;
  display: block;

.logo-header
  position: absolute;
  width: 35%;
  height: 100%;
  left: 32.5%;
  top: 0;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

.logo-header img
  width: 100%;
  height: auto;

.goDown
  z-index: 1;
  width: 100%;
  position: absolute;
  bottom: 2.5%;
  left: 0;
  text-align: center;
  animation-name: down;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-direction: alternate;

@keyframes down{
  0% { bottom: 2.5%; }
  100% { bottom: 4.5%; }
}

.goDown span
  display: block;
  width: 22px;
  margin: 0 auto;

.goDown span img
  width: 100%;
  height: auto;

.goDown span:hover
  cursor: pointer;
  opacity: .5;

.homeBanner
  width: 100%;
  height: auto;
  display: none;

.homeBanner img
  width: 100%;
  height: auto;


@media (max-width: 640px)
  .logo-header
    width: 45%;
    left: 27.5%;

  .videoIntro
    display: none;

  .homeBanner
    display: block;
