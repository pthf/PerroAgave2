.group-items ul.shop
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: center;

.group-items ul.shop li
  width: 18%;
  height: auto;
  position: relative;
  margin-left: 1%;
  margin-right: 1%;

.container-shop
  width: 60%;
  margin: 0 auto;
  margin-bottom: 80px;
  font-size: 1em;

.carrusel-shop-container
  width: 90%;
  height: auto;
  margin: 0 auto;
  position: relative;
  overflow: hidden;

.container-shop .container-title span
  margin-top: 60px;
  margin-bottom: 30px;
  display: block;

.shop li
  position: relative;
  border: 2px solid #F0F0F0;
  text-align: center;
  overflow: hidden;

.shop li img
  width: 60% !important;
  display: block
  margin: 0 auto;
  margin-top: 20px;
  margin-bottom: 15px;

.shop li div
  display: block;
  width: 100%;
  margin-top: 20px;
  margin-bottom: 20px;
  font-family: 'Gotham-Book';

.shop li div div
  display: inline;
  width: auto;
  margin-left: 5px;
  margin-right: 5px;

.shop li div.name
  display: block;
  text-transform: uppercase;
  font-family: 'Gotham-Bold';
  height: 4em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
  width: 95%;
  margin: 0 auto;

.shop li div img
  width: 15% !important;
  height: auto;

.shop li div.cart:hover
  cursor: pointer;
  opacity: .5;

.shop li .discount
  position: absolute;
  width: auto !important;
  top: -2px;
  left: 5%;
  margin: 0;
  font-size: .9em !important;
  font-family: 'Gotham-Bold' !important;
  background: #000;
  color: #FFF;
  padding: 1em .8em 1em .8em;

.shop li .view-most
  position: absolute;
  width: auto !important;
  top: 0;
  right: 5%;
  margin: 0;
  font-size: 2.5em !important;
  font-family: 'Gotham-Book' !important;
  color: #000;

.shop li .view-most:hover
  cursor: pointer;
  opacity: .5;

.shop li .information-bottle
	position: absolute;
	top: -100%;
	left: 0;
	width: 100%;
	height: 100%;
	background: #000;
	color: #FFF;
	margin: 0;
	font-family: 'Gotham-Book';
	font-size: .8em;
	overflow: auto;
	transition: .5s;


.shop li .information-bottle span
	width: 80% !important;
	height: auto !important;
	background: none !important;
	position: relative !important;
	margin: 0 auto !important;
	text-align: left !important;

.information-bottle span.title-bottle
	display block !important
	font-size .9em !important
	font-family 'Gotham-Bold' !important
	padding-top 15px !important
	padding-bottom 15px !important

.information-bottle div.close-info-bottle
	position: absolute;
	width: auto;
	margin: 0;
	top: 1%;
	right: 5%;
	font-size: 2em;
	font-family: 'Gotham-Book';

.information-bottle div.close-info-bottle:hover
	cursor: pointer;
	opacity: .5;

.view-more
  position: absolute;
  width: 20px;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;

.view-more:hover
  cursor: pointer;
  opacity: .5;

.view-more img
  width: 100%;
  height: auto;

.vml
  top: 0;
  left: -5%;

.vmr
  top: 0;
  right: -5%;

.container-gall-shop-list
  position: relative;
  width: 100%;

.buyGuide
  width: 100%;
  text-align: center;
  margin-bottom: 60px;
  font-family: 'Gotham-Book';

.buyGuide .openGuide
  text-decoration: underline;

.buyGuide .openGuide:hover
  cursor: pointer;
  opacity: .5;

.container-guide, .container-guide ul
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  margin-top: 30px;
  margin-bottom: 30px;

.container-guide ul li
  width: 20%;
  height: auto;

.container-guide ul li div
  width: 100%;
  height: auto;

.container-guide ul li div.step
  font-family: 'Gotham-Bold';
  font-size: 3em;
  text-align: center;
  border-bottom: 2px solid #000;

.container-guide ul li div.step-info
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  margin-top: 20px;

div.step-info .image-steep
  width: 20%;

div.step-info .image-steep img
  width: 100%;
  height: auto;

div.step-info .descr-steep
  width: 70%;
  height: auto;
  font-family: 'Gotham-Book';
  font-size: 1em;
  text-align: left;
  line-height: 1.2em;

@media(max-width: 1680px)
  .container-shop
    width: 70%;

@media(max-width: 1366px)
  .container-shop
    width: 80%;

  .view-more
    width: 15px;

  .vml
    left: -2.5%;

  .vmr
    right: -2.5%;

@media(max-width: 1024px)
  .container-shop
    width: 90%;

  .container-guide ul li
    width: 25%;
    height: auto;

@media(max-width: 640px)

  .container-guide ul li
    width: 50%;
    height: auto;
    margin-left: 25%;
    margin-right: 25%;
    margin-top: 20px;
    margin-bottom: 20px;

  .container-shop
    width: 70%;
    font-size: 1.3em;

  .group-items ul.shop li
    width:40%;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 5%;
    margin-bottom: 5%;

  .vml
    left: -5%;

  .vmr
    right: -5%;

@media(max-width: 480px)

  .container-guide ul li
    width: 90%;
    height: auto;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 20px;
    margin-bottom: 20px;

  .container-shop
    width: 50%;
    font-size: 1.3em;

  .group-items ul.shop li
    width:100%;
    margin-left: 0%;
    margin-right: 0%;
    margin-top: 5%;
    margin-bottom: 5%;

  .vml
    left: -10%;

  .vmr
    right: -10%;
