.container-us
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
  width: 100%;
  margin-top: 4.4vw;
  margin-bottom: 4.4vw;
  font-size: 1em;

.container-us .logo-pa
  width: 150px;
  height: auto;
  margin: 50px;

.container-us .logo-pa img
  width: 100%;
  height: auto;

.container-us .info-us
  width: 270px;
  margin: 50px;

@media(max-width: 640px)
  .container-us .logo-pa
    width: 120px;
    margin: 30px;

  .container-us .info-us
    margin: 30px;
