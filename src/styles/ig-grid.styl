//Instagram grid api

.photos-grid
  width 80%
  margin 0 auto
  height auto
  display flex
  flex-direction row
  justify-content flex-start
  align-items flex-start
  flex-wrap wrap
  text-align center

.photo-container
  width 22%
  height 300px
  margin 18px auto
  position relative
  overflow hidden
  background black
  img
    width auto
    height 100%

span
  &.title
    position absolute
    left 0
    bottom 0
    width 100%
    height 35px
    background rgba(0,0,0,.7)
    color #fff
    overflow hidden
    max-height 35px
    font-size 10px
    text-align left
    padding 4px

@media (max-width: 1366px)
  .photo-container
    width 30%

@media (max-width: 970px)
  .photo-container
    width 47%
    margin 10px auto
  .photos-grid
    width 90%

@media (max-width: 480px)
  .photo-container
    width 100%
    margin-right 0
