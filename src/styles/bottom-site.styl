.container-bottom
  font-size: 1em;
  background: #000;
  color: #FFF;
  width: 100%;
  padding-top: 40px;
  padding-bottom: 40px;
  text-align: center;

.container-bottom img
  width: 220px;
  height: auto;

.container-bottom ul
  width: 100%;
  margin-top: 40px;
  margin-bottom: 40px;

.container-bottom ul li
  margin-left: 15px;
  margin-right: 15px;

.container-bottom ul li:hover
  cursor: pointer;
  opacity: .5;

.container-bottom span
  font-family: 'Gotham-Bold';

@media(max-width: 640px)
  .container-bottom ul li
    width: 100%;
    height: auto;
    margin: 0 auto;
    margin-top: 10px;

  .container-bottom
    font-size: 1.2em;

  .container-bottom img
    width: 180px;
    height: auto;
